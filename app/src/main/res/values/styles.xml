<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkAccent</item>
        <item name="colorPrimaryDark">@color/nibu_gray_light</item>
        <item name="colorAccent">@color/nibu_accent</item>
        <item name="android:toolbarStyle">@style/ToolbarTheme</item>
        <item name="android:actionBarStyle">@style/ToolbarTheme</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@color/nibu_gray_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:statusBarColor">@color/nibu_gray</item>

    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">

        <item name="android:background">@color/nibu_background</item>
        <item name="android:colorBackground">@color/nibu_background</item>
        <item name="colorPrimary">@color/nibu_background</item>
        <item name="android:textColorSecondary">@color/nibu_background</item>
        <item name="theme">@style/NibuToolbarTheme</item>

    </style>

    <style name="NibuToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/nibu_background</item>
        <item name="colorControlNormal">@color/nibu_background</item>
        <item name="colorControlHighlight">@color/nibu_background</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontPath">fonts/Lato-BoldItalic.ttf</item>
    </style>


    <style name="PickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/nibu_gray_200</item>
        <item name="colorPrimaryDark">@color/nibu_gray</item>
        <item name="colorAccent">@color/nibu_gray</item>
    </style>



</resources>
